
@import 'colors.styl'

html, body
    margin: 0
    width: 100%
    height: 100%

a
    color: $curious-blue

.link--white
    text-decoration: none
    color: white

    &:hover, &:active, &:focus
        border-bottom: 1px solid currentColor
        padding-bottom: 1px

.text-container
    max-width: 650px
    width: 80%

.text-container--small
    max-width: 400px
    width: 80%

.text-container--large
    max-width: 800px
    width: 80%

.body-container
    box-sizing: border-box
    min-height: calc(100% - (2 * 82px))

.button--primary
    background-color: #e67e22
    text-decoration: none
    color: white
    border-radius: 3px;
    border: none
    padding: 14px 44px
    font-size: 14px
    text-transform: uppercase

.button--secondary
    background-color: #1e91d6
    text-decoration: none
    color: white
    border-radius: 3px;
    border: none
    padding: 14px 44px
    cursor: pointer

.icon
    height: 44px

.footer
    box-sizing: border-box
    color: white
    min-height: 82px
    margin: 0
    padding: 10px
    clear: both
    background-color: $off-black

.footer__item
    display: inline-block
    padding: 20px

@media (max-width: 640px)
    .footer
        clear: none
        text-align: center

    .footer__item
        display: block
        padding: 20px

    .right
        float: none

    .left
        float: none
