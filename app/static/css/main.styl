
@import 'colors.styl'

html, body
    margin: 0
    width: 100%
    height: 100%

.header
    box-sizing: border-box
    color: white
    height: 82px

.link--white
    text-decoration: none
    color: white

    &:hover, &:active, &:focus
        border-bottom: 1px solid currentColor
        padding-bottom: 1px

.body-container
    box-sizing: border-box
    min-height: calc(100% - 2 * (82px))

.footer
    box-sizing: border-box
    color: white
    height: 82px

.bg-off-black
    background-color: $off-black

.bg-porcelain
    background-color: $porcelain

.slate-gray
    color: $slate-gray

.button--primary
    background-color: #e67e22
    text-decoration: none
    color: white
    border-radius: 3px;
    border: none
    padding: 10px 20px

.button--secondary
    background-color: #1e91d6
    text-decoration: none
    color: white
    border-radius: 3px;
    border: none
    padding: 10px 20px

.capitalize
    text-transform: uppercase
