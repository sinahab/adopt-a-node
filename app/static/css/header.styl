
.header
    box-sizing: border-box
    color: white
    height: 82px

.header__logo
    padding-top: 10px
    padding-bottom: 10px

.header__button
    text-decoration: none
    color: white
    border-radius: 3px
    border: 2px solid white
    padding: 10px 24px
    cursor: pointer

.header__icon
    height: 34px

.header--web
    display: block

.header--mobile
    display: none

.drawer-hamburger
    padding-top: 28px
    position: absolute

.drawer-hamburger-icon
    background-color: white

    &:after, &:before
        background-color: white

@media (max-width: 740px)
    .header--web
        display: none

    .header--mobile
        display: block
